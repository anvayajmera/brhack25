---
// Use public/ assets via absolute paths so Vercel and Astro serve them reliably
// ...existing code...
import Counter from '../components/Countdown'
import { motion } from "framer-motion";
---

<section
  class="relative bg-[#024368] pb-28 text-white"
  id="information"
>
  <div
    class="relative z-50 flex justify-center w-full flex-wrap gap-x-20 gap-y-28 px-4 tablet:px-[10%] desktop:px-[2%]"
    id="counter-faq"
  >
    <div class="flex-auto px-[2%]" id="countdown">
      <div class="flex items-center justify-center">
        <h1 class="font-poppin text-center text-5xl font-bold">
        </h1>
      </div>
      <Counter client:load />
    </div>

  </div>
</section>

<style>
  #chest {
    background: url('../chest.svg');
    width: 75px;
    height: 75px;
    background-repeat: no-repeat;
    background-size: 75px;
  }

  .break-group {
    width: 100%;
    min-width: 300px;
    top: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .whale-group {
    display: flex;
    flex-direction: row;
    justify-content: left;
    width: 60%;
  }

  .whale {
    left: -4%;
  }

  .right-rock {
    width: 25%;
    right: 5%;
  }

.info-med-icons {
  display: flex;
  gap: 12px;
  align-items: center;
  justify-content: center;
}

.info-med-icons img {
  width: 64px;
  filter: drop-shadow(0 8px 18px rgba(1,25,40,0.6));
}
</style>
