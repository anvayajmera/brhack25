---

<section
  class="w-max-[300px] flex flex-col content-center items-center justify-center bg-gradient-to-b from-[#091f3d] to-[#041d33] text-white pt-20 animate-fade-in"
  id="faq"
>
  <div class="flex place-content-center items-center px-[10%] pb-10">
    <h1 class="animate-bounce text-5xl mr-4">ðŸ’¬</h1>
    <h1 class="text-5xl font-bold text-center">FAQ</h1>
  </div>

  <div
    class="desktop:container px-[10%] desktop:px-[2%] md:flex-row flex flex-wrap justify-center"
  >
    {
      newFaqQuestions.map((faq) => (
        <div class="flex-start relative flex min-h-[100px] flex-col text-white">
          <div
            id="question"
            class="m-[15px] max-h-fit min-h-[100px] w-[250px] cursor-pointer content-center justify-center rounded-[20px] border-[2px] bg-[#165E6B] p-5 text-center font-bold"
          >
            {faq.question}
          </div>
          <div
            id="answer"
            class="m-[15px] hidden content-center justify-center bg-gradient-to-b from-[#2a5574] to-[#2b7d7d] text-center"
          >
            {faq.answer}
          </div>
        </div>
      ))
    }
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const questions = document.querySelectorAll("#question");

    questions.forEach((question) => {
      question.addEventListener("click", () => {
        const answer = question.nextElementSibling;

        if (answer) {
          answer.classList.toggle("hidden");
        }

        // Toggle a class on the question to rotate the arrow
        question.classList.toggle("expanded");
      });
    });
  });
</script>

<style>
@keyframes fade-in {
  0% { opacity: 0; transform: translateY(30px); }
  100% { opacity: 1; transform: translateY(0); }
}
.animate-fade-in {
  animation: fade-in 1.2s ease;
}
  #question::after {
    position: relative;
    top: 5px;
    display: inline-block;
    background-size: 20px;
    height: 20px;
    width: 20px;
    content: "";
    background-image: url("../../faq/dropdown.svg");
    transition: transform 0.3s ease;
  }

  #question.expanded::after {
    transform: rotate(180deg);
  }

  #question:active {
    position: relative;
    top: 5px;
  }

  .hidden {
    display: none;
  }

  #answer {
    background-color: #165e6b;
    width: 250px;
    min-height: 50px;
    border-radius: 20px;
    vertical-align: center;
    text-align: center;
    padding: 15px;
  }
</style>
